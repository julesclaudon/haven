  padding: 0.875rem 1rem;
  border-radius: 1rem;
  position: relative;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.message-bubble.user {
  align-self: flex-end;
  background: rgba(147, 112, 219, 0.8);
  border-bottom-right-radius: 0.25rem;
}

.message-bubble.assistant {
  align-self: flex-start;
  background: rgba(233, 87, 120, 0.9);
  border-bottom-left-radius: 0.25rem;
}

.message-sender {
  font-size: 0.7rem;
  font-weight: 700;
  margin-bottom: 0.35rem;
  opacity: 0.9;
}

.message-text {
  font-size: 0.95rem;
  line-height: 1.5;
  white-space: pre-wrap;
}

.message-time {
  font-size: 0.65rem;
  opacity: 0.7;
  margin-top: 0.35rem;
  text-align: right;
}

/* Curseur clignotant pour le streaming */
.typing-indicator {
  display: inline-block;
  width: 8px;
  height: 16px;
  background: currentColor;
  margin-left: 2px;
  animation: blink 1s infinite;
}

@keyframes blink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0; }
}

.conversation-input {
  padding: 1rem 1.5rem;
  padding-bottom: calc(1rem + env(safe-area-inset-bottom, 0));
  background: rgba(0,0,0,0.3);
  border-top: 1px solid rgba(255,255,255,0.1);
}

.message-form {
  display: flex;
  align-items: flex-end;
  gap: 0.75rem;
}

.message-textarea {
  flex: 1;
  padding: 0.75rem 1rem;
  border: none;
  border-radius: 1.5rem;
  background: rgba(50, 50, 80, 0.8);
  color: #fff;
  font-size: 0.95rem;
  resize: none;
  outline: none;
  max-height: 120px;
  line-height: 1.4;
  overflow-y: auto;
}

.message-textarea::placeholder {
  color: rgba(255,255,255,0.5);
}

.message-textarea:focus {
  background: rgba(60, 60, 100, 0.9);
}

.send-btn {
  width: 44px;
  height: 44px;
  padding: 0;
  background: rgba(233, 87, 120, 0.9);
  color: #fff;
  border: none;
  border-radius: 50%;
  font-size: 1rem;
  cursor: pointer;
  transition: all 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.send-btn:hover {
  background: rgba(233, 87, 120, 1);
  transform: scale(1.05);
}

.send-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
}

.conversation-closed-notice {
  padding: 1rem 1.5rem;
  padding-bottom: calc(1rem + env(safe-area-inset-bottom, 0));
  background: rgba(0,0,0,0.3);
  border-top: 1px solid rgba(255,255,255,0.1);
  text-align: center;
  color: rgba(255,255,255,0.6);
  font-size: 0.9rem;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
}

/* Modal de confirmation */
.confirm-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  padding: 1rem;
}

.confirm-modal.active {
  display: flex;
}

.confirm-modal-content {
  background: #fff;
  border-radius: 1rem;
  padding: 2rem;
  max-width: 400px;
  width: 100%;
  text-align: center;
  animation: modalSlideIn 0.3s ease;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: scale(0.9) translateY(20px);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

.confirm-modal-icon {
  width: 60px;
  height: 60px;
  background: rgba(129, 201, 149, 0.15);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 1rem;
}

.confirm-modal-icon i {
  font-size: 1.75rem;
  color: #81C995;
}

.confirm-modal-content h2 {
  color: #1a1a2e;
  font-size: 1.25rem;
  margin: 0 0 0.5rem;
}

.confirm-modal-content p {
  color: #666;
  font-size: 0.9rem;
  margin: 0 0 1.5rem;
  line-height: 1.5;
}

.confirm-modal-actions {
  display: flex;
  gap: 0.75rem;
  justify-content: center;
}

.btn-cancel {
  padding: 0.75rem 1.5rem;
  background: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 0.5rem;
  font-size: 0.9rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s;
}

.btn-cancel:hover {
  background: #e0e0e0;
}

.btn-confirm {
  padding: 0.75rem 1.5rem;
  background: #81C995;
  color: #fff;
  border: none;
  border-radius: 0.5rem;
  font-size: 0.9rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s;
}

.btn-confirm:hover {
  background: #6ab580;
}

/* Responsive adjustments */
@media (max-width: 480px) {
  .conversation-header {
    padding: 0.875rem 1rem;
  }

  .conversation-header h1 {
    font-size: 1rem;
  }

  .finish-btn {
    padding: 0.4rem 0.75rem;
    font-size: 0.85rem;
  }

  .conversation-messages {
    padding: 1rem;
  }

  .message-bubble {
    max-width: 85%;
  }
}
</style>
