<div class="haven-conversation" data-controller="chat" data-chat-closed-value="<%= @chat.closed? %>">
  <header class="conversation-header">
    <%= link_to chats_path, class: "back-btn" do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>
    <div class="header-title-section">
      <h1><%= @chat.display_title %></h1>
      <% if @chat.closed? %>
        <span class="badge-closed">Terminée</span>
      <% end %>
    </div>
    <% unless @chat.closed? %>
      <button type="button" class="finish-btn" data-action="click->chat#confirmClose" data-chat-url="<%= close_chat_path(@chat) %>">
        <i class="fa-solid fa-check"></i>
        Terminer
      </button>
    <% else %>
      <div class="header-spacer"></div>
    <% end %>
  </header>

  <div class="conversation-messages" id="messages" data-chat-target="messages">
    <% if @messages.empty? %>
      <div class="chat-empty">
        <p>Commence à discuter avec Haven...</p>
      </div>
    <% else %>
      <% @messages.each do |message| %>
        <div class="message-bubble <%= message.role %>">
          <div class="message-sender">
            <%= message.role == 'user' ? 'Vous' : 'Haven (IA)' %>
          </div>
          <div class="message-text">
            <%= message.content %>
          </div>
          <div class="message-time">
            <%= message.created_at.strftime("%d %b %H:%M") %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <% unless @chat.closed? %>
    <div class="conversation-input">
      <%= form_with url: chat_messages_path(@chat), method: :post, local: true, class: "message-form", data: { chat_target: "form", action: "submit->chat#handleSubmit" } do |f| %>
        <%= f.text_area :content,
            name: "message[content]",
            placeholder: "Écrivez votre message...",
            class: "message-textarea",
            rows: 1,
            required: true,
            data: { chat_target: "textarea", action: "keydown->chat#handleKeydown input->chat#autoResize" } %>
        <button type="submit" class="send-btn" data-chat-target="submitBtn">
          <i class="fa-solid fa-paper-plane"></i>
        </button>
      <% end %>
    </div>
  <% else %>
    <div class="conversation-closed-notice">
      <i class="fa-solid fa-lock"></i>
      Cette conversation est terminée
    </div>
  <% end %>

  <!-- Modal de confirmation -->
  <div class="confirm-modal" id="confirm-modal" data-chat-target="confirmModal">
    <div class="confirm-modal-content">
      <div class="confirm-modal-icon" data-chat-target="modalIcon">
        <i class="fa-solid fa-check-circle"></i>
      </div>
      <h2 data-chat-target="modalTitle">Terminer cette conversation ?</h2>
      <p data-chat-target="modalText">Tu pourras toujours la consulter, mais tu ne pourras plus envoyer de messages.</p>
      <div class="confirm-modal-actions">
        <button type="button" class="btn-cancel" data-action="click->chat#cancelClose">Annuler</button>
        <button type="button" class="btn-confirm" data-action="click->chat#executeClose">Confirmer</button>
      </div>
    </div>
  </div>
</div>

<style>
.haven-conversation {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
  color: #fff;
}

