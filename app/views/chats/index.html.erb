<div class="chats-container">
  <div class="chats-header">
    <h1>Nos échanges</h1>
  </div>
  <div class="chats-content">
    <% if @chats.any? %>
      <ul class="chats-list">
        <% @chats.each do |chat| %>
          <li class="chat-item <%= 'chat-closed' if chat.closed? %>">
            <div class="chat-info">
              <%= link_to chat, class: "chat-link" do %>
                <i class="fa-solid fa-message"></i>
                <div class="chat-details">
                  <div class="chat-title-row">
                    <span class="chat-date"><%= chat.created_at.strftime("%d/%m/%Y à %H:%M") %></span>
                    <% if chat.closed? %>
                      <span class="chat-badge-closed">Terminée</span>
                    <% end %>
                  </div>
                  <% if chat.states.any? %>
                    <span class="chat-stage"><%= chat.states.last.grief_stage&.name %></span>
                  <% end %>
                </div>
              <% end %>
            </div>
            <% if chat.states.any? %>
              <button class="btn-state-popup" data-state-url="<%= state_path(chat.states.last, iframe: true) %>">
                <i class="fa-solid fa-eye"></i>
              </button>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="chats-empty">
        <i class="fa-solid fa-comments"></i>
        <p>Aucune conversation pour le moment.</p>
        <p>Lance ta première discussion avec Haven.</p>
      </div>
    <% end %>
  </div>
</div>
<!-- Modal State avec iframe -->
<div class="state-modal" id="state-modal" style="display: none;">
  <div class="state-modal-content state-modal-iframe">
    <button class="state-modal-close" id="state-modal-close">&times;</button>
    <iframe id="state-iframe" src="" frameborder="0"></iframe>
  </div>
</div>
<script>
document.addEventListener('turbo:load', function() {
  const stateButtons = document.querySelectorAll('.btn-state-popup');
  const modal = document.getElementById('state-modal');
  const modalClose = document.getElementById('state-modal-close');
  const iframe = document.getElementById('state-iframe');
  if (!modal) return;

  // Fonction pour ouvrir la modal
  function openModal(stateUrl) {
    iframe.src = stateUrl;
    modal.style.display = 'flex';
  }

  // Fonction pour fermer la modal
  function closeModal() {
    modal.style.display = 'none';
    iframe.src = '';
    // Nettoyer l'URL si on avait un paramètre open_state_id
    if (window.history.replaceState) {
      const url = new URL(window.location);
      url.searchParams.delete('open_state_id');
      window.history.replaceState({}, '', url);
    }
  }

  // Ouvrir automatiquement si open_state_id est présent
  <% if @open_state_id.present? %>
    const autoOpenUrl = "<%= state_path(@open_state_id, iframe: true) %>";
    openModal(autoOpenUrl);
  <% end %>

  stateButtons.forEach(function(btn) {
    btn.addEventListener('click', function(e) {
      e.preventDefault();
      openModal(this.dataset.stateUrl);
    });
  });

  modalClose.addEventListener('click', closeModal);

  modal.addEventListener('click', function(e) {
    if (e.target === modal) {
      closeModal();
    }
  });
});
</script>
