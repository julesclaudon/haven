<div class="haven-chat-landing" data-controller="speech" data-speech-auto-submit-value="false">
  <header class="haven-header">
    <h1 class="haven-logo">HAVEN</h1>
  </header>

  <main class="haven-main">
    <h2 class="haven-title">Speak or type<br>your feelings</h2>

    <%= form_with url: chats_path, method: :post, data: { turbo: false, speech_target: "form" }, class: "haven-form" do |f| %>
      <div class="haven-input-card">
        <textarea name="message[content]"
            placeholder="Exprime ce que tu ressens..."
            class="haven-textarea"
            rows="8"
            required
            data-speech-target="input"></textarea>
      </div>

      <div class="haven-actions">
        <button type="button" class="haven-mic-btn" data-speech-target="button" data-action="click->speech#toggle">
          <i class="fa-solid fa-microphone"></i>
        </button>
      </div>

      <button type="submit" class="haven-submit-btn">Envoyer</button>
    <% end %>
  </main>
</div>

