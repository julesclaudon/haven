<div class="container">
  <h1>Analyse #<%= @analysis.id %></h1>

  <div class="card">
    <div class="card-body">
      <p><strong>Score :</strong> <%= @analysis.score %></p>
      <hr>
      <h5>Résumé</h5>
      <p><%= simple_format(@analysis.resume) %></p>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to "Retour aux analyses", analyses_path, class: "btn btn-secondary" %>
    <%= link_to "Voir le state associé", state_path(@analysis.state), class: "btn btn-outline-primary" %>
  </div>
</div>
