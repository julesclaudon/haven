<!DOCTYPE html>
<html>
  <head>
    <title>Haven</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
      <div class="container">
        <%= link_to "Haven", root_path, class: "navbar-brand fw-bold" %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "Mon questionnaire", current_user.initial_quiz ? initial_quiz_path(current_user.initial_quiz) : new_initial_quiz_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Mes Ã©tats", states_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <li class="nav-item">
                <span class="nav-link text-muted"><%= current_user.email %></span>
              </li>
              <li class="nav-item">
                <%= link_to "DÃ©connexion", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Connexion", new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Inscription", new_user_registration_path, class: "btn btn-primary btn-sm ms-2" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <% if notice %>
      <div class="container mt-3">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      </div>
    <% end %>

    <% if alert %>
      <div class="container mt-3">
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      </div>
    <% end %>

    <main class="py-4">
      <%= yield %>
    </main>
  </body>
</html>
